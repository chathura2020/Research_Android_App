<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="chathura.research.PrtocolSelectorTest" >

      <ScrollView
         android:id="@+id/scrollView1"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
        
         android:layout_alignParentLeft="true" >

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="fill_parent" >
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="Reliability"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1" >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioButtonReliable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reliable" />

            <RadioButton
                android:id="@+id/radioButtonUnReliable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UnReliable" />
        </RadioGroup>
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:background="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view1"
        android:layout_below="@+id/view1"
        android:layout_marginTop="20dp"
        android:text="Data Size"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        
          android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="17dp"
        android:orientation="vertical" >

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            
            android:orientation="horizontal"
            android:dividerPadding="15dp"
            
             >

             <RadioButton
                 android:id="@+id/radioButtonLarge"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Large" />

            <RadioButton
                android:id="@+id/radioButtonMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium" />

          
            <RadioButton
                android:id="@+id/radioButtonSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small" />
  			
  			
            <RadioButton
                android:id="@+id/radioButtonVerySamll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Very Small" />
        </RadioGroup>
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:background="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view2"
        android:layout_below="@+id/view2"
        android:layout_marginTop="24dp"
        android:text="Transmission Frequency"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/view2"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="17dp"
        android:orientation="vertical" >

         <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


                <RadioButton
                    android:id="@+id/radioButtonHighFreq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High Freq" />
            

            <RadioButton
                android:id="@+id/radioButtonTriggredFreq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Triggered Freq" />
			
            <RadioButton
                android:id="@+id/radioButtonUrgentFreq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urgent Freq" />
  	
           
        </RadioGroup>
    </LinearLayout>
     
     <View
        android:id="@+id/view3"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout3"
        android:background="@android:color/holo_blue_light" />

     <Button
         android:id="@+id/buttonSelectProtocol"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/view3"
         android:layout_marginTop="19dp"
         android:layout_toRightOf="@+id/textView1"
         android:text="Select Protocol" />

     
     <TextView
          android:id="@+id/textViewResult"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/buttonSelectProtocol"
          android:layout_centerHorizontal="true"
          android:text="Large Text"
          android:textAppearance="?android:attr/textAppearanceLarge" />
     
     
         </RelativeLayout>
     </ScrollView>

      
    
</RelativeLayout>