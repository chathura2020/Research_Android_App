<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="chathura.research.MainDataType" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Select The Data You Need To Send"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RadioGroup
        android:id="@+id/rbtnGrpData"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/rbtnGPSData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="GPS Data" />

        <RadioButton
            android:id="@+id/rbtnWifiData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:text="Wifi Data" />

        <RadioButton
            android:id="@+id/rbtnObstacleFixedData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:text="Obstacle-Fixed" />

        <RadioButton
            android:id="@+id/rbtnObstacleNonStaionaryData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="Obstacle-Non Stationary" />
        
          <RadioButton
            android:id="@+id/rbtnMapData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="Map Data" />
          
          <RadioButton
            android:id="@+id/rbtnUserLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="User Location Data" />
          
           <RadioButton
            android:id="@+id/rbtnSensorData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="Sensor Data -Processed" />
           
           <RadioButton
            android:id="@+id/rbtnInstrction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="Instructions" />
        
        
    </RadioGroup>

    <Button
        android:id="@+id/buttonProtocolSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rbtnGrpData"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/rbtnGrpData"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="24dp"
        android:text="Send Data To Server" />

 

</RelativeLayout>